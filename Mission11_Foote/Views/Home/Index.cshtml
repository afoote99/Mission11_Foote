@{
    ViewData["Title"] = "Home Page";
}

@model BookListModel

<!--Taking in from the Project Summary and passing the info for each book in the database-->
@foreach (Book b in Model.Books)
{
    <partial name = "ProjectSummary" model ="b" />
}

<!--Using custom tag helpers!-->
<div page-model="@Model.PaginationInfo" page-action="Index" page-class="btn" page-class-enabled="true"
     page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>
