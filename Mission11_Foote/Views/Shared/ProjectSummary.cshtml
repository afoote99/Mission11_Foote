@{
}
@model Book

<!--This is laying out the info for each book. Passing this page to the index-->
<div class="card m-1 p-1">
    <h3>
        @Model.Title
        <span class="badge bg-black text-white float-end">$@Model.Price</span>
    </h3>
    <ul>
        <li>Author: @Model.Author</li>
        <li>Category/Classification: @Model.Category/@Model.Classification</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Number Of Pages: @Model.PageCount</li>
    </ul>
</div>
